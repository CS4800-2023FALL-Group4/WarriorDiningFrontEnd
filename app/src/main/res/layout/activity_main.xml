<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/warriorDiningText"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="#FF0000"
        android:paddingTop="10sp"
        android:text="Warrior Dining"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/prefButton"
        android:layout_width="76dp"
        android:layout_height="61dp"
        android:layout_below="@id/warriorDiningText"
        android:layout_alignRight="@id/warriorDiningText"
        android:layout_marginTop="-7dp"
        app:srcCompat="@android:drawable/ic_menu_manage"
        android:backgroundTint="@color/design_default_color_error" />

    <Button
        android:id="@+id/fetchBreakfastMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/prefButton"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="6dp"
        android:backgroundTint="@color/design_default_color_error"
        android:textColor="@color/white"
        android:text="Breakfast" />

    <Button
        android:id="@+id/fetchLunchMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/fetchBreakfastMenuButton"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/fetchBreakfastMenuButton"
        android:backgroundTint="@color/design_default_color_error"
        android:textColor="@color/white"
        android:text="Lunch" />

    <Button
        android:id="@+id/fetchDinnerMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/fetchBreakfastMenuButton"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/prefButton"
        android:layout_toRightOf="@id/fetchLunchMenuButton"
        android:backgroundTint="@color/design_default_color_error"
        android:textColor="@color/white"
        android:text="Dinner" />

    <ListView
        android:id="@+id/menuList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prefButton"
        android:layout_alignParentBottom="false" />

    <Button
        android:id="@+id/startLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Login" />

    <!-- Login Screen UI components -->

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/startLoginButton"
        android:layout_marginTop="16dp"
        android:hint="Email"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailEditText"
        android:layout_marginTop="16dp"
        android:text="Login"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
